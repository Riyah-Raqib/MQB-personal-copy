@article{Keitt2002,
  title    = "{Accounting for spatial pattern when modeling organism-environment
              interactions}",
  author   = "Keitt, T H and Bjornstad, O N and Dixon, P M and Citron-Pousty, S",
  journal  = "Ecography",
  address  = "Univ Calif Santa Barbara, Natl Ctr Ecol Anal \& Synth, Santa
